{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kodama",
  "version": "0.1.0",
  "identifier": "com.kodama.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../../ui/build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Kodama",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": {
      "../../ui/build/**/*": "ui/"
    }
  }
}
